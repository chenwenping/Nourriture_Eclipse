<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_nav_bar">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back" />

        <TextView
            style="@style/title_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/dish" />

        <Button
            android:id="@+id/btn_dish_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/add_recipe" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/item"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_dish_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/login_input"
            android:focusableInTouchMode="true"
            android:hint="dish name"
            android:padding="10dp"
            android:textColor="@color/edit_text_color"
            android:textSize="@dimen/text_main"></EditText>

        <EditText
            android:id="@+id/et_dish_description"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:background="@drawable/login_input"
            android:focusableInTouchMode="true"
            android:gravity="top"
            android:hint="dish description"
            android:padding="10dp"
            android:textColor="@color/edit_text_color"
            android:textSize="@dimen/text_main"></EditText>

        <ImageView
            android:id="@+id/img_dish_picture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/dish_add_img" />

    </LinearLayout>

</LinearLayout>